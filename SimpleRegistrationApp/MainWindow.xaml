<Window x:Class="SimpleRegistrationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleRegistrationApp"
        mc:Ignorable="d"
        Title="Simple Registration App"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Grid.ColumnSpan="2">
            <Label Content="Registration"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 0"/>
        </StackPanel>
        <Label Content="Имя:"
               Grid.Row="2" Grid.Column="1"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="16"
               Margin="0 0 40 5"/>
        <Label Content="Возраст:"
               Grid.Row="3" Grid.Column="1"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="16"
               Margin="0 0 40 5"/>
        <Label Content="Пароль:"
               Grid.Row="4" Grid.Column="1"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="16"
               Margin="0 0 40 5"/>
        <TextBox x:Name="regName"
                 Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 VerticalAlignment="Center"
                 Width="150" Height="20"
                 Margin="80 0 0 0"
                 FontSize="16"/>
        <TextBox x:Name="regAge"
                 Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                 VerticalAlignment="Center"
                 Width="150" Height="20"
                 Margin="80 0 0 0"
                 FontSize="16"/>
        <PasswordBox x:Name="regPassword"
                     Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                     VerticalAlignment="Center"
                     Width="150" Height="20"
                     Margin="80 0 0 0"
                     FontSize="16"/>
        <Button x:Name="registration"
                Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="150" Height="25"
                Margin="0 0 0 3"
                Content="Регистрация"
                VerticalContentAlignment="Center"
                FontSize="16" Click="registration_Click"/>
    </Grid>
</Window>
